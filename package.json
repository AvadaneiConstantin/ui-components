{
  "name": "ui-components-showcase",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npx tailwindcss -i ./src/input.css -o ./dist/output.css --watch\" \"vite --port 3000 --open\"",
    "build": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --minify && vite build",
    "preview": "vite preview",
    "tailwind:watch": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "tailwind:build": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --minify"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0",
    "vite": "^5.4.21"
  }
}
